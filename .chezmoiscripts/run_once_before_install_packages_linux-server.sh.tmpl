{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh

# escalation privileges
sudo /bin/bash <<EOF
    apt update

    ## zsh
    apt install -y zsh
    chsh -s /usr/bin/zsh $(echo {{ .chezmoi.username }})

    ## fd
    apt install -y fd-find
    ln -sf /usr/bin/fdfind /usr/local/bin/fd

    ## bat
    apt install -y bat
    ln -sf /usr/bin/batcat /usr/local/bin/bat

    ## fzf
    apt install -y fzf

    ## ripgrep
    apt install ripgrep

    ## eza
    wget -qO- https://raw.githubusercontent.com/eza-community/eza/main/deb.asc | sudo tee /etc/apt/trusted.gpg.d/gierens.asc
    echo "deb http://deb.gierens.de stable main" | sudo tee /etc/apt/sources.list.d/gierens.list
    sudo apt update
    sudo apt install -y eza

    ## tldr
    apt install -y tldr

    ## gitui
    wget https://github.com/extrawurst/gitui/releases/download/v0.26.1/gitui-linux-x86_64.tar.gz -O - | tar -xz -C /usr/local/bin/
    chown root:root /usr/local/bin/gitui
    chmod 755 /usr/local/bin/gitui

    ## fail2ban
    apt install -y iptables
    apt install -y fail2ban

    ## starship
    curl -sS https://starship.rs/install.sh | sh

    ## build nvim from source
    apt install -y ninja-build gettext cmake unzip curl build-essential
    cd /tmp
    rm -rf neovim
    git clone https://github.com/neovim/neovim
    cd neovim
    git checkout stable
    make CMAKE_BUILD_TYPE=RelWithDebInfo
    cd build
    cpack -G DEB && sudo dpkg -i nvim-linux64.deb
    rm -rf /tmp/neovim
    
    # Dependencies for nvim
    apt install -y npm
    apt install -y cargo

EOF
{{ end -}}
