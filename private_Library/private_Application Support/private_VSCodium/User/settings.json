{
    // telemetry
    "telemetry.telemetryLevel": "off",
    "redhat.telemetry.enabled": false,
    "gitlens.telemetry.enabled": false,
    // general settings
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.stickyScroll.enabled": true,
    "editor.semanticHighlighting.enabled": true,
    // python settings
    "python.venvPath": "~/Library/Caches/pypoetry/virtualenvs",
    // Hack to make Pylance usable with VSCodium, see: 
    // https://github.com/VSCodium/vscodium/discussions/1641#discussion-5634184
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports.ruff": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    // ruff settings
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "ruff.lint.run": "onType",
    "ruff.importStrategy": "fromEnvironment",
    // mypy settings
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.showNotifications": "always",
    // Notebook/Jupyter settings
    "notebook.output.textLineLimit": 9999999,
    "notebook.lineNumbers": "on",
    // "notebook.formatOnSave.enabled": true,
    // "notebook.codeActionsOnSave": {
    //     "source.fixAll": true,
    //     "source.organizeImports": true
    // },
    "jupyter.experiments.enabled": false,
    "autoDocstring.docstringFormat": "google",
    "autoDocstring.startOnNewLine": true,
    "debug.console.acceptSuggestionOnEnter": "on",
    // spelling extension settings
    "cSpell.customDictionaries": {
        "custom-dictionary-user": {
            "name": "custom-dictionary-user",
            "path": "~/.cspell/custom-dictionary-user.txt",
            "addWords": true,
            "scope": "user"
        }
    },
    // todo extension settings
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX"
    ],
    "todo-tree.filtering.excludeGlobs": [
        "**/node_modules",
        "**/.venv",
        "**/env"
    ],
    "errorLens.enabled": true,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning"
    ],
    "editor.accessibilitySupport": "off",
    "remote.autoForwardPortsSource": "hybrid",
}